@page
@model EditModel

@{
    ViewData["Title"] = "Edit Book";
}
<div class="container mt-5">
    <div class="row justify-content-center align-items-start g-4">
        <div class="col-12 col-md-4 text-center">
            <img src="../assets/Images/@(Model.Book.Image)" 
                 class="card-img-top img-fluid mx-auto book-image-details" 
                 style="cursor: url('../assets/cursor.png'), auto;" 
                 alt="@Model.Book.Title">
            <div class="mt-3">
                <label for="CoverImage" class="form-label"><strong>Change Cover:</strong></label>
                <input type="file" id="CoverImage" name="CoverImage" class="form-control" />
            </div>
        </div>

        <div class="col-12 col-md-8">
            <form method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="Title" class="form-label"><strong>Title:</strong></label>
                    <input type="text" id="Title" name="Book.Title" 
                           value="@Model.Book.Title" class="form-control" />
                </div>
                <div class="mb-3">
                    <label for="Description" class="form-label"><strong>Description:</strong></label>
                    <textarea id="Description" name="Book.Description" 
                              class="form-control">@Model.Book.Description</textarea>
                </div>
                <div class="mb-3">
                    <label for="Year" class="form-label"><strong>Year:</strong></label>
                    <input type="number" id="Year" name="Book.Year" 
                           value="@Model.Book.Year" class="form-control" />
                </div>
                <div class="mb-3">
                    <label for="Source" class="form-label"><strong>Source:</strong></label>
                    <input type="text" id="Source" name="Book.Source" 
                           value="@Model.Book.Source" class="form-control" />
                </div>
                <div class="mb-3">
                    <label for="IsLent" class="form-label"><strong>Is Lent:</strong></label>
                    <select id="IsLent" name="Book.IsLent" class="form-control">
                        <option value="true" selected="@Model.Book.IsLent">Yes</option>
                        <option value="false" selected="@(!Model.Book.IsLent)">No</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="Authors" class="form-label"><strong>Authors:</strong></label>
                    <input type="text" id="Authors" name="Book.Authors" 
                           value="@string.Join(", ", Model.Book.Authors.Select(a => a.FirstName + " " + a.LastName))" 
                           class="form-control" />
                </div>
                <div class="mb-3">
                    <label for="Genres" class="form-label"><strong>Genres:</strong></label>
                    <input type="text" id="Genres" name="Book.Genres" 
                           value="@string.Join(", ", Model.Book.Genres.Select(g => g.Name))" 
                           class="form-control" />
                </div>
                <div class="d-flex justify-content-center mt-4">
                    <button type="submit" class="btn bg-body mx-2" style="width: 50px; height: 50px; color: white; border: 1px solid white; opacity: 0.8">
                        <i class="fa-solid fa-check"></i>
                    </button>
                    <button type="button" class="btn bg-body mx-2" style="width: 50px; height: 50px; color: white; border: 1px solid white; opacity: 0.8" 
                            onclick="location.href='/Library'">
                        <i class="fa-solid fa-xmark"></i>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
