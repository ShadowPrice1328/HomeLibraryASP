@page
@model AddModel

@{
    ViewData["Title"] = "Add Book";
}
<div class="container mt-5">
    <div class="row justify-content-center align-items-start g-4">
        <div class="col-12 col-md-4 text-center">
            <div>
                <label for="CoverImage" class="form-label"><strong>Upload Cover:</strong></label>
                <input type="file" id="CoverImage" name="CoverImage" class="form-control" />
            </div>
            <div class="mt-3">
                <img id="coverPreview" 
                     src="../assets/placeholder.jpg" 
                     class="card-img-top img-fluid book-image-details" 
                     style="cursor: pointer; max-width: 100%; height: auto;" 
                     alt="Book Cover Preview">
            </div>
        </div>

        <div class="col-12 col-md-8">
            <form method="post" enctype="multipart/form-data">
            <input type="hidden" name="Book.Image" />
                <div class="mb-3">
                    <label for="Title" class="form-label"><strong>Title:</strong></label>
                    <input type="text" id="Title" name="Book.Title" class="form-control" placeholder="Enter book title" />
                </div>
                <div class="mb-3">
                    <label for="Description" class="form-label"><strong>Description:</strong></label>
                    <textarea id="Description" name="Book.Description" class="form-control" placeholder="Enter book description"></textarea>
                </div>
                <div class="mb-3">
                    <label for="Year" class="form-label"><strong>Year:</strong></label>
                    <input type="number" id="Year" name="YearInput" class="form-control" placeholder="Enter year of publication" />
                </div>
                <div class="mb-3">
                    <label for="Source" class="form-label"><strong>Source:</strong></label>
                    <input type="text" id="Source" name="Book.Source" class="form-control" placeholder="Enter source of book" />
                </div>
                <div class="mb-3">
                    <label for="IsLent" class="form-label"><strong>Is Lent:</strong></label>
                    <select id="IsLent" name="Book.IsLent" class="form-control">
                        <option value="true">Yes</option>
                        <option value="false">No</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="Authors" class="form-label"><strong>Authors:</strong></label>
                    <input type="text" id="Authors" name="Authors" 
                           class="form-control" placeholder="Enter authors (comma-separated)" />
                </div>
                <div class="mb-3">
                    <label for="Genres" class="form-label"><strong>Genres:</strong></label>
                    <input type="text" id="Genres" name="Genres" 
                           class="form-control" placeholder="Enter genres (comma-separated)" />
                </div>
                <div class="d-flex justify-content-center mt-4">
                    <button type="submit" class="btn mx-2 custom-button">
                        <i class="fa-solid fa-check"></i>
                    </button>
                    <button type="button" class="btn mx-2 custom-button" 
                            onclick="location.href='/Library'">
                        <i class="fa-solid fa-xmark"></i>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    document.getElementById('CoverImage').addEventListener('change', function(event) {
        const file = event.target.files[0];
        if (file) {
            const reader = new FileReader();
            reader.onload = function(e) {
                document.getElementById('coverPreview').src = e.target.result;
            };
            reader.readAsDataURL(file);
        }
    });
</script>

<script src="/js/uploadCover.js"></script>